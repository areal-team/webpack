{
  "name": "webpack-assembly",
  "version": "1.0.0",
  "description": "Сборка webpack",
  "private": true,
  "scripts": {
    "dev:build": "clear && cross-env NODE_ENV=development webpack --progress",
    "prod:build": "clear && cross-env NODE_ENV=production webpack --progress",
    "dev:watch": "clear && cross-env NODE_ENV=development webpack --watch",
    "prod:watch": "clear && cross-env NODE_ENV=production webpack --watch",
    "dev:server": "clear && cross-env NODE_ENV=development webpack-dev-server --open",
    "prod:server": "clear && cross-env NODE_ENV=production webpack-dev-server --open",
    "dev": "clear && ntl -e start dev prod.*",
    "prod": "clear && ntl -e start prod dev.*",
    "back": "clear && npm start",
    "start": "clear && ntl -e start back dev:.* prod:.*"
  },
  "author": "Areal <hello@arealidea.ru>",
  "license": "MIT",
  "keywords": [
    "webpack",
    "js",
    "css",
    "sass",
    "scss"
  ],
  "browserslist": [
    "> 1%",
    "last 4 version"
  ],
  "ntl": {
    "descriptions": {
      "dev:build": "Собрать проект в режиме разработки",
      "prod:build": "Собрать проект в режиме производства",
      "dev:watch": "Отслеживать и пересобирать проект в режиме разработки",
      "prod:watch": "Отслеживать и пересобирать проект в режиме производства",
      "dev:server": "Запустить сервер проекта в режиме разработки",
      "prod:server": "Запустить сервер проекта в режиме производства",
      "dev": "Разработка",
      "prod": "Производство",
      "back": "Назад"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "babel-loader": "^8.1.0",
    "clean-webpack-plugin": "^3.0.0",
    "copy-webpack-plugin": "^6.0.3",
    "cross-env": "^7.0.2",
    "css-loader": "^3.6.0",
    "css-mqpacker": "^7.0.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "imagemin-advpng": "^6.0.0",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-gm": "^2.0.2",
    "imagemin-jpeg-recompress": "^7.0.0",
    "imagemin-mozjpeg": "^9.0.0",
    "imagemin-svgo": "^8.0.0",
    "imagemin-webpack-plugin": "^2.4.2",
    "mini-css-extract-plugin": "^0.9.0",
    "node-sass": "^4.14.1",
    "ntl": "^5.1.0",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-easy-import": "^3.0.0",
    "postcss-flexbugs-fixes": "^4.2.1",
    "postcss-loader": "^3.0.0",
    "postcss-preset-env": "^6.7.0",
    "sass-loader": "^9.0.1",
    "terser-webpack-plugin": "^3.0.6",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@babel/polyfill": "^7.10.4",
    "normalize.css": "^8.0.1",
    "svgxuse": "^1.2.6"
  }
}
